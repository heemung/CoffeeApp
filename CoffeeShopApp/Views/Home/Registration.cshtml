
@{
    ViewBag.Title = "Registration";
}

<h2>Register</h2>
<div></div>
<form name="userReg" action="/Home/Reg" onsubmit="return validateForm()" method="post">

    <label class="control-label">First Name</label>
    <br />
    <input type="text" name="fName" id="fName" placeholder="John" class="form-control" />
    <div class="Errors" id="errorfirst"></div>
    <br />

    <label class="control-label">Last Name</label>
    <br />
    <input type="text" name="lName" placeholder="Doe" class="form-control" />
    <div class="Errors" id="errorlast"></div>
    <br />

    <label class="control-label"> Email</label>
    <br /><input type="email" name="email" placeholder="myemail@email.com" class="form-control" />
    <div class="Errors" id="erroremail"></div>
    <br />

    <label class="control-label">Phone Number</label>
    <br /><input type="text" name="phone" placeholder="555-555-5555" class="form-control" />
    <div class="Errors" id="errorphone"></div>
    <br />

    <label class="control-label">Password</label>
    <br /><input type="password" name="password" id="Password" class="form-control" onkeyup="check()" />
    <br /><label class="control-label">Confirm Password</label>
    <span id="message"></span>
    <br /><input type="password" name="PasswordConfirm" id="PasswordConfirm" class="form-control" onkeyup="check()" />
    <div class="Errors" id="errorpassword"></div>
    <br />
    <p></p>

    <fieldset>
        <legend>Sign Up For News Letter? </legend>
        <label>Yes    <input type="radio" name="radio" value="Yes"></label>
        <label>No    <input type="radio" name="radio" value="No" checked="checked"></label>
        <p></p>
        </fieldset>
        <p><input type="submit" value="Finished" class="btn-default" /></p>


</form>
<script src="~/Scripts/SimpleValidation.js" type="text/javascript"></script>

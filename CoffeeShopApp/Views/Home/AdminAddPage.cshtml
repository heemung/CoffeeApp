@model CoffeeShopApp.Models.Item

@{
    ViewBag.Title = "AdminAddPage";
}

<h2>Add Item</h2>

<form name="Add" action="/Home/Add" method="post">

    <label class="control-label">Item Name</label>
    <br />
    <input type="text" name="ItemName" placeholder="required" class="form-control" />
    <div class="Errors" id="errorfirst"></div>
    <br />

    <label class="control-label">Description</label>
    <br />
    <input type="text" name="Description" placeholder="required" class="form-control" />
    <div class="Errors" id="errorlast"></div>
    <br />

    <label class="control-label"> Price</label>
    <!--- @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })-->
    <br /><input type="number" step="0.01" name="Price" placeholder="required" class="form-control" />
    <div class="Errors" id="erroremail"></div>
    <br />

    <label class="control-label">Quantity</label>
    <br /><input type="number" name="Quantity" placeholder="required" class="form-control" />
    <div class="Errors" id="errorphone"></div>
    <br />

    <label class="control-label">ImagePath</label>
    <br /><input type="text" name="ImagePath" placeholder="optional" class="form-control" />
    <p></p>
    <p><input type="submit" value="Finished" class="btn-default" /></p>
</form>

@Html.ActionLink("Go Back", "Admin", "Home", new { @class = "elements" }, null)

